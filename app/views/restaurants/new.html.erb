<div class="container">
  <h1>New Restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES, include_blank: "Select a category" %>
    <%= f.submit "Add", class: "btn btn-dark" %>
  <% end %>
  <%= link_to "Back", restaurants_path, class: "btn btn-primary mt-2" %>
</div>
