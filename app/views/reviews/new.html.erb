<div class="container">
  <h1> <%=@restaurant.name%> </h1>
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Submit Review", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Restaurants", restaurants_path, class: "btn btn-dark mt-2" %>
</div>
